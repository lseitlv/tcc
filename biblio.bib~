@article{chan2013cybersecurity,
    author    = {Chan, A.C. and Jianying Zhou},
    title     = {On smart grid cybersecurity standardization: Issues of designing with NISTIR 7628},
    journal   = {Communications Magazine, IEEE},
    volume    = {51},
    number    = {1},
    pages     = {58-65},
    year      = {2013},
    month    = {Jan},
    abstract-note = {Cybersecurity is an important but usually not adequately addressed area in the smart grid. Its standardization is also relatively immature. The NISTIR 7628 seems to be a comprehensive document for security designers/practitioners in smart grid research and practice. However, the NISTIR 7628 security framework might still be insufficient to specify the requirements of a secure smart grid system. More specifically, the EV charging infrastructure is used to study the effectiveness of the NISTIR 7628 framework in specifying security criteria, and the resulting security assurance. Two weaknesses, one in addressing node or device authentication and the other in location privacy of EV owners, are found for a system satisfying all the security requirements stipulated by the NISTIR 7628, thus illustrating the subtlety of applying the NISTIR 7628.},
    doi = {10.1109/MCOM.2013.6400439},
    owner = {lseitelvein},
    timestamp = {2015.09.07}
}

@article{carcano2011multidim,
    author    = {Carcano, A. and Coletta, A. and Guglielmi, M.and; Masera, M. and Fovino, I.N. and Trombetta, A.},
    title     = {A Multidimensional Critical State Analysis for Detecting Intrusions in SCADA Systems},
    journal   = {Industrial Informatics, IEEE Transactions},
    volume    = {7},
    number    = {2},
    pages     = {179-186},
    year      = {2011},
    month    = {May},
    abstract-note = {A relatively new trend in Critical Infrastructures (e.g., power plants, nuclear plants, energy grids, etc.) is the massive migration from the classic model of isolated systems, to a system-of-systems model, where these infrastructures are intensifying their interconnections through Information and Communications Technology (ICT) means. The ICT core of these industrial installations is known as Supervisory Control And Data Acquisition Systems (SCADA). Traditional ICT security countermeasures (e.g., classic firewalls, anti-viruses and IDSs) fail in providing a complete protection to these systems since their needs are different from those of traditional ICT. This paper presents an innovative approach to Intrusion Detection in SCADA systems based on the concept of Critical State Analysis and State Proximity. The theoretical framework is supported by tests conducted with an Intrusion Detection System prototype implementing the proposed detection approach.},
    doi = {10.1109/TII.2010.2099234},
    owner = {lseitelvein},
    timestamp = {2015.09.09}
}

@article{coutinho2009anomaly,
    author    = {Coutinho, M.P. and Lambert-Torres, G. and da Silva, L.E.B. and Martins, H.G. and Lazarek, H. and Neto, J.C.},
    title     = {Anomaly detection in power system control center critical infrastructures using rough classification algorithm},
